@model CMS.Models.Post
@{
    ViewBag.Title = "About";
}

<!--Start Carousel-->
<div id="carouselExampleIndicators" class="carousel slide bs-slider">
    <div class="carousel-inner">
        <div class="carousel-item active">
            <img class="d-block w-100" src="~/Content/Images/slide1.jpg" alt="First slide">
            <div class="bs-slider-overlay"></div>
            <div class="carousel-caption">
                <h1 class="display-4 animated fadeInDown slide1 ashow">About <span class="bad">Us</span></h1>
                <p class="lead animated fadeInDown slide2 d-none d-md-block">Lorem ipsum dolor sit amet, consectetur adipisicing elit. Velit est facilis maiores, perspiciatis accusamus asperiores sint consequuntur debitis.</p>
                <button type="button" class="btn btn-primary btn-lg scroll animated fadeInUp slide3 anone">Learn More</button>
            </div>
        </div>
    </div>
</div>
<!--End Caursol-->
<!--Start About-->
<section class="learn about_us">
    <div class="container">
        <div class="row wow fadeInUp">
            <div class="col-md-6">
                <h1 class="section-title">@Model.Title</h1>
                <p class="section-content lead">@Html.Raw(Model.Content)</p>
            </div>
            <div class="col-md-6 text-center">
                <img src="@(Model.MediaId == null ? Url.Content("~/Content/images/blank.jpg") : Url.Content("~/Uploads/"+Model.image.FileName))" class="rounded img-fluid" alt="...">
            </div>
        </div>
    </div>
</section>
<!--End About-->
