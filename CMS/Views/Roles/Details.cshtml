@model IEnumerable<CMS.Models.UserViewModels>

@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_LayoutDashboard.cshtml";
}

<h2>Details</h2>

<div>
    <h4>Role</h4>
    <hr />
    <dl class="dl-horizontal ml-3">
        <dt>
            @Html.DisplayNameFor(model => model.Name)
        </dt>

        <dd>
            @ViewBag.RoleName
        </dd>
    </dl>

    <div class="card mb-3">
        <div class="card-header">
            <i class="fa fa-users"></i> Users
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                    <thead>
                        <tr>
                            <th>@Html.DisplayNameFor(item => item.Name)</th>
                            <th>@Html.DisplayNameFor(item => item.Email)</th>
                            <th>Options</th>
                        </tr>
                    </thead>

                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@Html.DisplayFor(modelItem => item.Name)</td>
                                <td>@Html.DisplayFor(modelItem => item.Email)</td>
                                <td>
                                    @Html.ActionLink(linkText: "Edit", actionName: "Edit", controllerName: "Users", routeValues: new { id = item.Id }, htmlAttributes: null)
                                    @if (!item.Role.Equals("Admin"))
                                    {
                                        @:| @Html.ActionLink(linkText: "Delete", actionName: "Delete", controllerName: "Users", routeValues: new { id = item.Id }, htmlAttributes: null)

                                    }
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
        <div class="card-footer small text-muted">
            Updated Today At
            <script>
                var d = new Date();
                document.write(d.getHours() % 12 + ":" + d.getMinutes() + ":" + d.getSeconds());
            </script>
        </div>
    </div>
</div>
<p>
    @Html.ActionLink("Back to List", "Index")
</p>
